{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@electronloc/*": ["electron/*"],
      "@prismaloc/*": ["electron/prisma/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["utils/*"],
      "@layouts/*": ["src/layouts/*"]
    }
  },
  "include": ["vite.config.ts", "alias.ts", "electron", "tests"]
}
